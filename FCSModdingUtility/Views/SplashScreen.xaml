<Window x:Class="FCSModdingUtility.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FCSModdingUtility"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="SlateGray"
        WindowStartupLocation="CenterScreen"
        Title="SplashScreen" Height="500" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="../Images/Logo/logo-small - FCS.png" Width="200" Height="200" />
            <TextBlock FontSize="30" Foreground="White" Text="FCS Modding Helper" TextAlignment="Center"/>
            <TextBlock FontSize="15" Foreground="White" Text="Lets Get Started" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
